<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- =============VISTAS DE LIBROS================= -->
    <!-- Vista de árbol (lista) para Libros -->
    <record id="view_libro_tree" model="ir.ui.view">
        <field name="name">biblioteca.libro.tree</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>  <!-- Título -->
                <field name="autor_id"/>  <!-- Autor -->
                <field name="estado"/>  <!-- Estado (disponible/prestado/atrasado) -->
                <field name="genero"/>  <!-- Género literario -->
                <field name="multa"/>  <!-- Multa por día de atraso -->
                <field name="monto"/>  <!-- Precio por préstamo -->
            </list>
        </field>
    </record>
    <!-- Vista de formulario para Libros -->
    <record id="view_libro_form" model="ir.ui.view">
        <field name="name">biblioteca.libro.form</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- Grupo 1: Información básica del libro -->
                    <group>
                        <group>
                            <field name="name"/>  <!-- Título -->
                            <field name="autor_id"/>  <!-- Autor -->
                            <field name="editorial"/>  <!-- Editorial -->
                        </group>
                        <group>
                            <field name="estado" readonly="1"/>  <!-- Estado (solo lectura) -->
                            <field name="genero"/>  <!-- Género -->
                            <field name="anio_publicacion"/>  <!-- Año de publicación -->
                        </group>
                    </group>       
                    <!-- Grupo 2: Precios y multas -->
                    <group string="Precios por Prestamo">
                        <field name="monto"/>  <!-- Precio por préstamo -->
                        <field name="multa"/>  <!-- Multa por día de atraso -->
                    </group>
                    <!-- Grupo 3: Descripción -->
                    <group>
                        <field name="descripcion" nolabel="1"/>  <!-- Descripción sin etiqueta -->
                    </group>
                    <!-- Historial de préstamos de este libro -->
                    <field name="prestamo_ids"> 
                        <list> 
                            <field name="name"/>  <!-- Referencia del préstamo -->
                            <field name="miembro_id"/>  <!-- Miembro -->
                            <field name="fecha_prestamo"/>  <!-- Fecha de préstamo -->
                            <field name="estado"/>  <!-- Estado del préstamo -->
                        </list> 
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- =============VISTAS DE AUTORES================= -->
    <!-- Vista de árbol (lista) para Autores -->
    <record id="view_autor_tree" model="ir.ui.view">
        <field name="name">biblioteca.autor.tree</field>
        <field name="model">biblioteca.autor</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>  <!-- Nombre del autor -->
                <field name="nacionalidad"/>  <!-- Nacionalidad -->
                <field name="total_libros"/>  <!-- Número de libros (campo calculado) -->
            </list>
        </field>
    </record>
    <!-- Vista de formulario para Autores -->
    <record id="view_autor_form" model="ir.ui.view">
        <field name="name">biblioteca.autor.form</field>
        <field name="model">biblioteca.autor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- Grupo 1: Información personal del autor -->
                    <group>
                        <group>
                            <field name="name"/>  <!-- Nombre -->
                            <field name="nacionalidad"/>  <!-- Nacionalidad -->
                            <field name="fecha_nacimiento"/>  <!-- Fecha de nacimiento -->
                        </group>
                        <group>
                            <field name="total_libros" readonly="1"/>  <!-- Total de libros (solo lectura) -->
                        </group>
                    </group>       
                    <!-- Grupo 2: Biografía -->
                    <group>
                        <field name="biografia" nolabel="1"/>  <!-- Biografía sin etiqueta -->
                    </group>
                    <!-- Lista de libros escritos por este autor -->
                    <field name="libro_ids">
                        <list>
                            <field name="name"/>  <!-- Título del libro -->
                            <field name="estado"/>  <!-- Estado del libro -->
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
    <!-- =============VISTAS DE MIEMBROS================= -->
    <!-- Vista de árbol (lista) para Miembros -->
    <record id="view_miembro_tree" model="ir.ui.view">
        <field name="name">biblioteca.miembro.tree</field>
        <field name="model">biblioteca.miembro</field>
        <field name="arch" type="xml">
            <list>
                <field name="codigo_miembro"/>  <!-- Código único -->
                <field name="name"/>  <!-- Nombre completo -->
                <field name="dni"/>  <!-- Documento de identidad -->
                <field name="email"/>  <!-- Email -->
                <field name="telefono"/>  <!-- Teléfono -->
                <field name="estado"/>  <!-- Estado de la membresía -->
                <field name="prestamos_activos"/>  <!-- Préstamos no devueltos (calculado) -->
                <field name="deuda_total"/>  <!-- Deuda total (calculado) -->
            </list>
        </field>
    </record>
    <!-- Vista de formulario para Miembros -->
    <record id="view_miembro_form" model="ir.ui.view">
        <field name="name">biblioteca.miembro.form</field>
        <field name="model">biblioteca.miembro</field>
        <field name="arch" type="xml">
            <form string="Miembro de Biblioteca">
                <sheet>
                    <!-- Grupo 1: Información personal y de contacto -->
                    <group>
                        <group>
                            <field name="codigo_miembro" readonly="1"/>  <!-- Código (solo lectura) -->
                            <field name="name"/>  <!-- Nombre -->
                            <field name="dni"/>  <!-- DNI -->
                            <field name="estado"/>  <!-- Estado -->
                        </group>
                        <group>
                            <field name="email"/>  <!-- Email -->
                            <field name="telefono"/>  <!-- Teléfono -->
                            <field name="direccion"/>  <!-- Dirección -->
                        </group>
                        <group>
                            <field name="fecha_registro" readonly="1"/>  <!-- Fecha de registro (solo lectura) -->
                            <field name="prestamos_activos" readonly="1"/>  <!-- Préstamos activos (solo lectura) -->
                            <field name="deuda_total" readonly="1"/>  <!-- Deuda total (solo lectura) -->
                        </group>
                    </group>
                    <!-- Pestaña para ver el historial de préstamos -->
                    <notebook>
                        <page string="Préstamos">
                            <field name="prestamo_ids">
                                <list>
                                    <field name="name"/>  <!-- Referencia del préstamo -->
                                    <field name="libro_id"/>  <!-- Libro prestado -->
                                    <field name="fecha_prestamo"/>  <!-- Fecha de préstamo -->
                                    <field name="fecha_devolucion"/>  <!-- Fecha de devolución -->
                                    <field name="estado"/>  <!-- Estado del préstamo -->
                                    <field name="multa"/>  <!-- Multa aplicada -->
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- =============ACCIONES DE VENTANA===================== -->
    <!-- Acción para abrir la vista de Libros -->
    <record id="action_libro" model="ir.actions.act_window">
        <field name="name">Libros</field>
        <field name="res_model">biblioteca.libro</field>
        <field name="view_mode">list,form</field>  <!-- Vista lista y formulario -->
    </record>
    <!-- Acción para abrir la vista de Autores -->
    <record id="action_autor" model="ir.actions.act_window">
        <field name="name">Autores</field>
        <field name="res_model">biblioteca.autor</field>
        <field name="view_mode">list,form</field>  <!-- Vista lista y formulario -->
    </record>
    <!-- Acción para abrir la vista de Miembros -->
    <record id="action_miembro" model="ir.actions.act_window">
        <field name="name">Miembros</field>
        <field name="res_model">biblioteca.miembro</field>
        <field name="view_mode">list,form</field>  <!-- Vista lista y formulario -->
    </record>
</odoo>